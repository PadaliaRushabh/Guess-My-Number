<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settingimg" >
    <LinearLayout 
    android:id="@+id/RadioGroupCardMode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewNumberRangeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number Range"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <SeekBar
        android:id="@+id/seekBarNumberRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="40" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textViewNumberRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewCardModeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card Mode"
        android:layout_marginTop="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <View 
        android:background="#2F4F4F" 
        android:layout_width = "fill_parent" 
        android:layout_height="1dip" 
        android:layout_centerVertical ="true" 
        android:layout_marginTop="5dp"
        android:layout_above="@id/textViewCardModeLabel"/>
    <RadioGroup
        android:id="@+id/radioGroupCardMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    <RadioButton
        android:id="@+id/radioAppGuess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Guess" />

    <RadioButton
        android:id="@+id/radioUserGuess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Guess" />

    <RadioButton
        android:id="@+id/radiofreePlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Free Play" />
    </RadioGroup>
   
    
    <TextView
        android:id="@+id/textViewGameModeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Mode"
        android:layout_marginTop="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
   <View 
        android:background="#2F4F4F" 
        android:layout_width = "fill_parent" 
        android:layout_height="1dip" 
        android:layout_centerVertical ="true" 
        android:layout_marginTop="5dp"
        android:layout_above="@id/textViewGameModeLabel"/>
    <RadioGroup
        android:id="@+id/radioGroupGameMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    <RadioButton
        android:id="@+id/radioFibonacci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fibonacci" />

    <RadioButton
        android:id="@+id/radioBinary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Binary" />

    <RadioButton
        android:id="@+id/radioPrime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prime" />
    </RadioGroup>

   <TextView
       android:id="@+id/textView3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="User Guess Extras"
       android:layout_marginTop="5dp"
       android:textAppearance="?android:attr/textAppearanceMedium" />

   <View
       android:layout_width="fill_parent"
       android:layout_height="1dip"
       android:layout_marginTop="5dp"
       android:background="#2F4F4F" />

   <TextView
       android:id="@+id/textView1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="5dp"
       android:text="Time in Seconds" />

   <SeekBar
       android:id="@+id/seekBarTime"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="5dp"
       android:max="50" />

  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textViewSeekBarTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

   <TextView
       android:id="@+id/textViewAttempt"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="5dp"
       android:text="Attempts" />

   <Spinner
       android:id="@+id/spinnerAttempt"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" 
       android:layout_marginTop="5dp"/>

    <View 
        android:background="#2F4F4F" 
        android:layout_width = "fill_parent" 
        android:layout_height="1dip" 
        android:layout_centerVertical ="true" 
        android:layout_marginTop="5dp"/>
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical" >
        
       <Switch
            android:id="@+id/switchMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sound"/>
       
       <Switch
            android:id="@+id/switchBackGroundMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Background Music"/>
   
    </LinearLayout>
</LinearLayout>
</ScrollView>
