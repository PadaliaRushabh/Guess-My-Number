<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.game.guessmynumber"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyTheme" >
        <activity
            android:name="android.game.guessmynumber.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="android.game.guessmynumber.GameActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="android.game.guessmynumber.SettingActivity"
            android:label="@string/app_name"
            android:parentActivityName="android.game.guessmynumber.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.game.guessmynumber.MainActivity" />
        </activity>
        <activity
            android:name="android.game.guessmynumber.ResultActivity"
            android:label="@string/app_name"
            android:parentActivityName="android.game.guessmynumber.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.game.guessmynumber.MainActivity" />
        </activity>
        
        <activity
            android:name="android.game.guessmynumber.ScoreActivity"
            android:label="@string/app_name"
            android:parentActivityName="android.game.guessmynumber.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.game.guessmynumber.MainActivity" />
        </activity>
        
        <service
            android:name="android.game.guessmynumber.BackgroundMusic"
            android:enabled="true" />

    </application>

</manifest>